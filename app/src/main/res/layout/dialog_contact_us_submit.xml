<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_20sdp"
    android:gravity="center"
    android:animateLayoutChanges="true"
    android:focusableInTouchMode="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        >
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/tick_inside_a_circle"/>
    </FrameLayout>
    <TextView
        fontPath="fonts/medium.ttf"
        tools:ignore="MissingPrefix"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank You"
        android:textSize="@dimen/Size10"
        android:gravity="center"
        android:textColor="@color/textColorRed"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:gravity="center"
        android:textSize="@dimen/Size12"
        android:text="Your query has been\nsuccessfuly submitted. We will contact you shortly." />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="center"
        >


        <TextView
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_width="@dimen/Dialog_Button_Width"
            android:layout_height="@dimen/Dialog_Button_Height"
            android:background="@drawable/btn_design_solid"
            android:text="OK"
            android:id="@+id/yes"
            android:textSize="@dimen/Size9"
            android:textColor="@color/textColorWhite"
            />

    </LinearLayout>
</LinearLayout>