<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete" />


    </FrameLayout>

    <TextView
        fontPath="fonts/medium.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="center"
        android:text="Confirm Delete"
        android:textColor="@color/textColorRed"
        android:textSize="@dimen/Size10"
        tools:ignore="MissingPrefix" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:gravity="center"
        android:text="Are you sure you want to delete event?"
        android:textSize="@dimen/Size12" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no"
            android:layout_width="@dimen/Dialog_Button_Width"
            android:layout_height="@dimen/Dialog_Button_Height"
            android:layout_margin="5dp"
            android:background="@drawable/btn_design_stroke"
            android:gravity="center"
            android:text="No"
            android:textColor="@color/textColorRed"
            android:textSize="@dimen/Size9" />

        <TextView
            android:id="@+id/yes"
            android:layout_width="@dimen/Dialog_Button_Width"
            android:layout_height="@dimen/Dialog_Button_Height"
            android:layout_margin="5dp"
            android:background="@drawable/btn_design_solid"
            android:gravity="center"
            android:text="Yes"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/Size9" />

    </LinearLayout>
</LinearLayout>