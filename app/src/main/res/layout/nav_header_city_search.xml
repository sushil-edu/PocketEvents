<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topRll"
    android:layout_width="match_parent"
    android:layout_height="140sp"
    android:background="@color/textColorRed"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="@dimen/_20sdp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_8sdp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/nav_profileImage"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_vertical"
                android:transitionName="@string/profileAnimation"
                app:srcCompat="@drawable/user_profile_image_grey" />
        </FrameLayout>


        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nav_name"
                    fontPath="fonts/medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:maxWidth="120dp"
                    android:text="Android Studio"
                    android:textColor="@color/textColorWhite"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="MissingPrefix" />

                <ImageView
                    android:id="@+id/edit_icon"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="top"
                    android:src="@drawable/edit"

                    android:tint="@color/textColorWhite" />
            </LinearLayout>

            <TextView
                android:id="@+id/nav_email"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:gravity="bottom"
                android:text="android.studio@android.com"
                android:textColor="@color/textColorWhite"
                android:textSize="@dimen/Size9" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


        </FrameLayout>


    </LinearLayout>


</RelativeLayout>



