<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_20sdp">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:src="@drawable/tick_inside_a_circle" />
    </FrameLayout>

    <TextView
        fontPath="fonts/medium.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:text="Venue Selected Successfully"
        android:textColor="@color/textColorRed"
        android:textSize="@dimen/Size10"
        tools:ignore="MissingPrefix" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:text="Good thing."
        android:textSize="@dimen/Size12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_30sdp"
        android:gravity="center"
        android:text="You have successfuly selected your event venue. Now proceed with its technical set-up such as Stage, Lights, Sound and more."
        android:textSize="@dimen/Size12" />


    <TextView
        android:id="@+id/proceed"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/Button_Height"
        android:background="@drawable/btn_design_solid"
        android:gravity="center"
        android:text="Proceed with Set-Up"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/Size9" />


</LinearLayout>