<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialogue_b_venueCategory"
                fontPath="fonts/medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Venue Category"
                android:textColor="@color/textColorRed"
                android:textSize="@dimen/Size12"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/dialogue_b_venueSubheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/_30sdp"
                android:paddingRight="@dimen/_30sdp"
                android:text="Select Category"
                android:textSize="@dimen/Size10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_6sdp">

                <TextView
                    android:id="@+id/previous"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_45sdp"
                    android:background="@drawable/previous" />
            </FrameLayout>


            <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                android:id="@+id/dialogue_b_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="7"></com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_weight="1"
                android:padding="@dimen/_6sdp">

                <TextView
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_45sdp"
                    android:background="@drawable/next" />
            </FrameLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_11sdp"
            android:background="@color/selection_grey" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialogue_b_back_btn"
                android:layout_width="@dimen/Dialog_Button_Width"
                android:layout_height="@dimen/Dialog_Button_Height"
                android:layout_margin="5dp"
                android:background="@drawable/btn_design_stroke"
                android:gravity="center"
                android:text="Back"
                android:textColor="@color/textColorRed"
                android:textSize="@dimen/Size9" />

            <TextView
                android:id="@+id/dialogue_b_select_btn"
                android:layout_width="@dimen/Dialog_Button_Width"
                android:layout_height="@dimen/Dialog_Button_Height"
                android:layout_margin="5dp"
                android:background="@drawable/btn_design_solid"
                android:gravity="center"
                android:text="Select"
                android:textColor="@color/textColorWhite"
                android:textSize="@dimen/Size9" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
