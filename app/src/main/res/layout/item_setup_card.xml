<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:padding="@dimen/_15sdp"
    android:background="@color/textColorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <TextView
            fontPath="fonts/medium.ttf"
            tools:ignore="MissingPrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Set-Up"
            android:gravity="center"
            android:id="@+id/text1"
            android:textSize="@dimen/Size12"
            android:layout_marginBottom="4dp"
            android:textColor="@color/textColorRed"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:id="@+id/text2"
            android:text="1 Backdrop, 1 Screen Set-Up" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:id="@+id/text3"
            android:layout_marginBottom="4dp"
            android:text="This set-up is ideal for small functions /address by company spokesperson and it includes one stage with two screens and backdrop."
            android:gravity="center"
            android:textSize="@dimen/Size9"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:layout_width="@dimen/Button_Width"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/btn_design_stroke"
                android:text="View Details"
                android:gravity="center"
                android:id="@+id/setupSeeDetails"
                android:textSize="10sp"
                android:layout_margin="5dp"
                android:textColor="@color/textColorRed"/>

            <TextView
                android:gravity="center"
                android:layout_width="@dimen/Button_Width"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="5dp"
                android:id="@+id/setupSelect"
                android:background="@color/selection_grey"
                android:text="Select Set-up"
                android:textColor="@color/textColorWhite"
                android:textSize="10sp"/>
        </LinearLayout>

</LinearLayout>
</LinearLayout>