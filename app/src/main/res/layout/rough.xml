<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:id="@+id/venue_btn_filter"
    android:background="#000"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/circle_white"
        android:id="@+id/c1"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <View
        android:layout_width="@dimen/_50sdp"
        android:layout_height="1dp"
        android:background="@color/textColorWhite"
        android:id="@+id/l1"
        android:layout_toRightOf="@id/c1"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/circle_white"
        android:layout_marginTop="@dimen/_7sdp"
        android:id="@+id/c2"
        android:layout_toRightOf="@id/l1"
        android:layout_centerVertical="true"
        />

    <View
        android:layout_width="@dimen/_50sdp"
        android:layout_height="1dp"
        android:layout_toRightOf="@id/c2"
        android:layout_centerVertical="true"
        android:background="@color/textColorWhite"
        android:id="@+id/l2"
        />

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/circle_white"
        android:layout_marginTop="@dimen/_7sdp"
        android:id="@+id/c3"
        android:layout_toRightOf="@id/l2"
        android:layout_centerVertical="true"
        />

    <View
        android:layout_width="@dimen/_50sdp"
        android:layout_height="1dp"
        android:layout_toRightOf="@id/c3"
        android:id="@+id/l3"
        android:layout_centerVertical="true"
        android:background="@color/textColorWhite"
        />

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/circle_white"
        android:id="@+id/c4"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_toRightOf="@id/l3"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue"
        android:gravity="center"
        android:layout_above="@id/c1"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/Size10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set-Up"
        android:gravity="center"
        android:layout_above="@id/c2"
        android:layout_toRightOf="@id/l1"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/Size10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Design"
        android:gravity="center"
        android:layout_above="@id/c3"
        android:layout_toRightOf="@id/l2"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/Size10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/c4"
        android:layout_toRightOf="@id/l3"
        android:text="More"
        android:gravity="center"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/Size10"
        />


</RelativeLayout>