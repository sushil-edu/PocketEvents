<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:animateLayoutChanges="true"
    android:focusableInTouchMode="true">
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_20sdp">
        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_gravity="center"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/tick_inside_a_circle"/>
    </FrameLayout>
    <TextView
        fontPath="fonts/medium.ttf"
        tools:ignore="MissingPrefix"
        android:layout_gravity="center"
        android:id="@+id/messageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations"
        android:textSize="@dimen/Size11"
        android:gravity="center"
        android:textColor="@color/textColorRed"
        />
    <TextView
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:gravity="center"
        android:textSize="@dimen/Size12"
        android:text="Event  Configuration Done"
        />

    <TextView
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
       android:textAlignment="center"
        android:textSize="@dimen/Size12"
        android:text="You have successfully configured your event. Access your event's details anytime from My Events."  />
    <TextView
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:gravity="center"
        android:id="@+id/messageBody"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/Size12"
        android:text="Explore our Consulting Services which can further help you with flawless execution of your event."
        />

    <LinearLayout
        android:padding="@dimen/_8sdp"
       android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_5sdp"
                android:id="@+id/maybelater"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/btn_design_stroke"
                android:text="Maybe Later"
                android:textColor="@color/textColorRed"
                android:textSize="@dimen/Size9" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/eventSaved"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/btn_design_solid"
            android:text="Yes, I Need Consulting"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/Size9" />
        </FrameLayout>
    </LinearLayout>



</LinearLayout>