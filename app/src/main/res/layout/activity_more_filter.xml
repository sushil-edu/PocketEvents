<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MorefilterRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kestone.com.kestone.UI.MoreFilterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_grey_light"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Venue Filters"
                android:textSize="@dimen/Size12" />



        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/selection_grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_grey_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/morefilter_rv_left"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:paddingLeft="5dp">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:gravity="center"
                    android:id="@+id/morefilterClear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Button_Large_Height"
                    android:background="@color/btnColorGrey"
                    android:text="Clear All"
                    android:textAllCaps="false"
                    android:textColor="@color/textColorWhite" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/textColorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/moreFilter_rv_right"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:gravity="center"
                    android:id="@+id/moreFilterApply"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Button_Large_Height"
                    android:background="@drawable/btn_design_solid"
                    android:text="Apply"
                    android:textAllCaps="false"
                    android:textColor="@color/textColorWhite"
                    android:layout_marginLeft="@dimen/_2sdp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
