<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgotPasswordRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@mipmap/bg"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/_30sdp"
    android:paddingRight="@dimen/_30sdp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/ForgotpassLogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_weight="2.8"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/pocket_logo_black_bg" />


    <TextView
        android:id="@+id/forgotPassroot2"
        fontPath="fonts/medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_weight=".5"
        android:gravity="center"
        android:text="Forgot Password"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/Size12"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/forgotPassroot3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_14sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:text="It happens. Enter your registered Email ID
and check your mailbox for further
instructions.
"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/Size11" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_weight="1"
        android:textColorHint="@color/textColorWhite">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/forgotPass_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnColorGrey"
            android:gravity="center"
            android:hint="Enter Email ID"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:textColor="@color/textColorWhite"
            android:textColorHint="@color/textColorWhite"
            android:textSize="@dimen/Size10" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/forgotPasswordSubmit"
        android:layout_width="@dimen/Button_Width"
        android:layout_height="@dimen/Button_Height"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/btn_design_solid"
        android:gravity="center"
        android:padding="2dp"
        android:text="Submit"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/Size10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />


</LinearLayout>