<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/venueFilterRoot"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/venueFilterCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:padding="3dp"
        android:background="@color/textColorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_venue_filter_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/Size9"
                android:text="Category" />

            <TextView
                android:id="@+id/item_venue_filter_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5 Stars"
                android:layout_marginTop="@dimen/_4sdp"
                android:textSize="@dimen/Size9"
                android:textColor="@color/textColorRed" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/item_consulting_image"
        android:layout_width="22dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/check_white" />

</RelativeLayout>