<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_grey_light"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                fontPath="fonts/medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Compare Halls"
                android:textSize="@dimen/Size12"
                tools:ignore="MissingPrefix" />

            <ToggleButton
                android:id="@+id/toggle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:checked="true" />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/selection_grey"/>

    <ListView
        android:id="@+id/compareList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/bg_grey_light"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/Button_Large_Height"
        android:background="@color/bg_grey"
        android:orientation="horizontal"
        android:divider="@null">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/Button_Large_Height"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/compareBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_grey_solid_dark"
                android:gravity="center"
                android:text="Back"
                android:textColor="@color/textColorWhite"
                android:textSize="@dimen/Size11" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/textColorWhite"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/CompareListSelect1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_design_stroke"
                android:gravity="center"
                android:text="Select Hall"
                android:textColor="@color/textColorRed"
                android:textSize="@dimen/Size8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/textColorWhite"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/CompareListSelect2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:background="@drawable/btn_design_stroke"
                android:gravity="center"
                android:text="Select Hall"
                android:textColor="@color/textColorRed"
                android:textSize="@dimen/Size8" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
