<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    android:background="@mipmap/bg"
    tools:context="kestone.com.kestone.UI.RewardsAndReferrals">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:id="@+id/venue_header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                fontPath="fonts/medium.ttf"
                tools:ignore="MissingPrefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Reward and Referrals"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="@color/textColorWhite"
                android:textSize="@dimen/Size12" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#fff"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/view_all_earning"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/earning_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3750"
                android:layout_marginTop="@dimen/_15sdp"
                fontPath="fonts/medium.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/textColorRed"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Current Points Balance"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/textColorGrey"
                android:textSize="@dimen/Size9" />

            <TextView
                android:id="@+id/total_points"
                android:gravity="center"
                android:layout_width="130dp"
                android:layout_height="@dimen/Button_Height"
                android:text="View Points"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/Size10"
                android:textColor="@color/textColorRed"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/btn_design_stroke"/>

        </LinearLayout>



    <LinearLayout
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:orientation="vertical"
        android:background="@color/bg_grey">

            <TextView
                fontPath="fonts/medium.ttf"
                tools:ignore="MissingPrefix"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:text="Refer And Earn"
                android:textAlignment="center"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="@color/textColorRed"
                android:gravity="center"/>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3">
            <View
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/textColorGrey"
                android:layout_width="0dp"
                android:layout_height="1dp"></View>

            <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="How it Works"
                android:textColor="@color/textColorGrey"
                android:textSize="@dimen/Size11"
                />
            <View
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/textColorGrey"
                android:layout_width="0dp"
                android:layout_height="1dp"></View>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <View
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_red_background"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"></View>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Invite friends to download the app and sign up with your referral code."
                    android:textColor="@color/textColorGrey"
                    android:textSize="@dimen/Size10" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <View
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_red_background"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"></View>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Earn points for every friend that signs up with your referral code."
                    android:textColor="@color/textColorGrey"
                    android:textSize="@dimen/Size10" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <View
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_red_background"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"></View>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Earn points for every purchase that you make in the app."
                    android:textColor="@color/textColorGrey"
                    android:textSize="@dimen/Size10" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:gravity="bottom"
        android:text="Your Referral Code"
        android:textColor="@color/textColorGrey"
        android:textSize="@dimen/Size11"/>

    <TextView
        fontPath="fonts/medium.ttf"
        tools:ignore="MissingPrefix"
        android:id="@+id/referral_code"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:text="vkYTGD"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/textColorRed"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/invite_friend"
        android:gravity="center"
        android:layout_width="130dp"
        android:layout_height="@dimen/Button_Height"
        android:text="Invite Friends"
        android:textSize="@dimen/Size10"
        android:textColor="@color/textColorRed"
        android:background="@drawable/btn_design_stroke" />


    <TextView
        android:id="@+id/termsConditions"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:gravity="center"
        android:text="Terms and Conditions"
        android:textColor="@color/textColorGrey"
        android:visibility="invisible"
        android:textSize="@dimen/Size10"/>
    </LinearLayout>

</LinearLayout>
