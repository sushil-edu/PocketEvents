<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_25sdp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialogue_a_venueCategory"
            fontPath="fonts/medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Venue Category"
            android:textColor="@color/textColorRed"
            android:textSize="@dimen/Size12"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/dialogue_a_venueSubheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_30sdp"
            android:text="Select Category"
            android:textSize="@dimen/Size10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">

        <TextView
            android:id="@+id/firstTv"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/shape_circle_white"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/textColorBlack"
            android:text="50"
            android:layout_margin="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/secondTv"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/shape_circle_white"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/textColorBlack"
            android:text="51-100"/>

        <TextView
            android:id="@+id/thirdTv"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/shape_circle_white"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_margin="@dimen/_15sdp"
            android:textColor="@color/textColorBlack"
            android:text="100\nabove"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etCapacity"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@null"
            android:gravity="center"
            android:hint="Enter Hall Capacity"
            android:inputType="number"
            android:textSize="14sp"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginRight="@dimen/_11sdp"
        android:layout_marginBottom="@dimen/_11sdp"
        android:background="@color/selection_grey" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialogue_a_back_btn"
            android:layout_width="@dimen/Dialog_Button_Width"
            android:layout_height="@dimen/Dialog_Button_Height"
            android:layout_margin="5dp"
            android:background="@drawable/btn_design_stroke"
            android:gravity="center"
            android:text="Back"
            android:textColor="@color/textColorRed"
            android:textSize="@dimen/Size9" />

        <TextView
            android:id="@+id/dialogue_a_select_btn"
            android:layout_width="@dimen/Dialog_Button_Width"
            android:layout_height="@dimen/Dialog_Button_Height"
            android:layout_margin="5dp"
            android:background="@color/selection_grey"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/Size9" />

    </LinearLayout>

</LinearLayout>