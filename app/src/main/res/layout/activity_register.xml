<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/register_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_20sdp"
        android:paddingLeft="@dimen/_50sdp"
        android:paddingRight="@dimen/_50sdp"
        android:paddingTop="@dimen/_10sdp">


        <ImageView
            android:id="@+id/register_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/pocket_logo_black_bg"
            android:transitionName="@string/logoAnimation" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColorHint="@color/textColorWhite">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/register_et_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColorGrey"
                android:gravity="center"
                android:hint="Name*"
                android:inputType="text"
                android:lines="1"
                android:textColor="@color/textColorWhite"
                android:textColorHint="@color/textColorWhite"
                android:textSize="@dimen/Size10" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColorHint="@color/textColorWhite">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/register_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColorGrey"
                android:gravity="center"
                android:hint="Email ID*"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:textColor="@color/textColorWhite"
                android:textColorHint="@color/textColorWhite"
                android:textSize="@dimen/Size10" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColorHint="@color/textColorWhite">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/register_et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColorGrey"
                android:gravity="center"
                android:hint="Mobile No.*"
                android:inputType="phone"
                android:lines="1"
                android:textColor="@color/textColorWhite"
                android:textColorHint="@color/textColorWhite"
                android:textSize="@dimen/Size10" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColorHint="@color/textColorWhite">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/register_et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColorGrey"
                android:gravity="center"
                android:hint="Address*"
                android:inputType="text"
                android:textColor="@color/textColorWhite"
                android:textColorHint="@color/textColorWhite"
                android:textSize="@dimen/Size10" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColorHint="@color/textColorWhite">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/register_et_refferal_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColorGrey"
                android:gravity="center"
                android:hint="Referral Code"
                android:inputType="textCapCharacters"
                android:lines="1"
                android:maxLength="9"
                android:textAllCaps="true"
                android:textColor="@color/textColorWhite"
                android:textColorHint="@color/textColorWhite"
                android:textSize="@dimen/Size10" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColorHint="@color/textColorWhite">

            <android.support.v7.widget.AppCompatEditText

                android:id="@+id/register_et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColorGrey"
                android:gravity="center"
                android:hint="Password*"
                android:lines="1"
                android:textColor="@color/textColorWhite"
                android:textColorHint="@color/textColorWhite"
                android:textSize="@dimen/Size10" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColorHint="@color/textColorWhite">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/register_et_confirm_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColorGrey"
                android:gravity="center"
                android:hint="Confirm Password*"
                android:lines="1"
                android:textColor="@color/textColorWhite"
                android:textColorHint="@color/textColorWhite"
                android:textSize="@dimen/Size10" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chkTermAndConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I Agree to providing my information to pocketevents subject to terms and condition specified"
                android:textColor="@color/textColorWhite"
                android:textSize="12dp"
                android:buttonTint="@color/textColorWhite"
                />
            <TextView
                android:id="@+id/tvTermAndCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                android:text="Terms And Conditions"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/register_btn_otp"
            android:layout_width="@dimen/Button_Width"
            android:layout_height="@dimen/Button_Height"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_design_solid"
            android:gravity="center"
            android:padding="2dp"
            android:text="Register"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/Size10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/id1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Already registered?"
                android:textColor="@color/textColorWhite"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/register_btn_login"
                android:layout_width="@dimen/Button_Width"
                android:layout_height="@dimen/Button_Height"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/btn_design_stroke"
                android:gravity="center"
                android:text="Login"
                android:textColor="@color/textColorWhite"
                android:textSize="@dimen/Size10" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>